{{ form_start(form, {'attr': {'method': 'POST', 'role': 'form'}}) }}

{% if not form.vars.valid %}
    <div class="alert alert-warning alert-dismissable">
        <button type=​"button" class=​"close" data-dismiss=​"alert" aria-hidden=​"true">​×​</button>​
        <h4>
            <i class="icon fa fa-warning"></i> Erreurs !
        </h4>​
        {{ form_errors(form) }}
    </div>
{% endif %}

<div class="row">
    <div class="col-sm-5">
        <div class="form-group">
            {{ form_label(form.lastName, "Nom") }}
            {{ form_errors(form.lastName) }}
            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-5">
        <div class="form-group">
            {{ form_label(form.firstName, "Prénom") }}
            {{ form_errors(form.firstName) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>
<div>
  <span class="text-red"><strong>*</strong></span> <span> Champs obligatoires</span>
</div>

<div class="row">
  <div class="col-sm-12">&nbsp;</div>
  <div class="col-sm-12">
    <input type="submit" value="Enregistrer" class="btn btn-custom"/>
    <a href="{{ path('appbook_index') }}" class="btn btn-default" style="border_radius: 0px;">Annuler</a>
  </div>
</div>

{{ form_rest(form) }}

{{ form_end(form) }}
