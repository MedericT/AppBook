{% extends 'AppBookBundle::layout.html.twig' %}

{% block maincontent %}

    <div class="container">
        <div class="starter-template">
            <h1>Livres</h1>
                <p>
                    <a href="{{ path('appbook_book_add') }}" class="btn btn-custom">Ajouter un Livre</a>
                    <a href="#" class="btn btn-custom">Ajouter un Auteur</a>
                    <a href="{{ path('appbook_genre_add') }}" class="btn btn-custom">Ajouter un Genre</a>
                </p>
        </div>

        {% if listBooks is empty %}
            <p class="lead">Il n'y a pour le moment aucun livre de disponnible</p>
        {% else %}
            {% for book in listBooks %}
                <li>{{ book.title }}
            {% endfor %}
        {% endif %}


    </div><!-- /.container -->

{% endblock %}
